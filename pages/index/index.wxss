.container {
  padding: 16rpx;
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.tools-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.tool-card {
  width: 48%;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}
.tool-image {
  width: 100%;
  height: 160rpx;
  border-radius: 8rpx;
}
.tool-info {
  margin-top: 12rpx;
}
.tool-name {
  font-weight: bold;
  font-size: 28rpx;
}
.tool-desc {
  font-size: 24rpx;
  color: #666;
  margin: 6rpx 0;
  height: 64rpx;
  overflow: hidden;
}
.tool-price {
  color: #f00;
  font-size: 26rpx;
}
.tool-subprice {
  font-size: 22rpx;
  color: #999;
}
.tool-tags {
  display: flex;
  flex-wrap: wrap;
  margin: 6rpx 0;
}
.tool-tag {
  background: #f1f1f1;
  font-size: 20rpx;
  color: #333;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
}
.btn {
  background-color: #07c160;
  color: white;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 8rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
}